<div class="row">
  <div class="col-md-3">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body"><p>stats</p></div>
        </div>
      </div>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body"><p>trends</p></div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <%= render '/components/post_form' %>
    <br><br>
    <% for @p in @posts %>
      <div class="panel panel-default post-panel">
        <div class="panel-body row">
          <div class="col-md-2">
            <img src="/avatar.png" class="rounded-img" width="200px" height="200px"></img>
          </div>
          <div class="col-md-10">
            <div class="post-title"><p><span class="post-owner"><%= User.find(@p.user_id).username %></span> - <span class="post-creation"><%= @p.created_at.to_formatted_s(:short) %></span></p></div>
            <div class="post-content"><p><%= @p.content %></p></div>
          </div>
        </div>
        <div class="panel-body row">
          <div class="col-md-2">
          </div>
          <div class="col-md-10">
            <div class="post-links">
              <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
              <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
              <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
              <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-body"><p>about</p></div>
    </div>
  </div>
</div>
