<div class="panel panel-default post-panel post-form-panel">
  <div class="panel-body row">
    <div class="col-md-2">
      <img src="/avatar.png" class="rounded-img" width="200px" height="200px"></img>
    </div>
    <div class="col-md-10">
      <%= form_for(@newPost) do |f| %>
        <center>
          <div class="field" style="margin-left: 0px;">
            <%= f.text_field :content, autofocus: true, class: "form-control" %>
            <span style="float: right; margin-top: 6px;"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
          </div>
        <br>
          <div class="actions">

          </div>
        </center>
      <% end %>

    </div>
  </div>
</div>
